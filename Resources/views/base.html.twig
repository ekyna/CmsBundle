{% spaceless %}
<!DOCTYPE html>
<html lang="{{ app.request.locale }}"{{ cms_document_data() }}>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="/favicon.ico">

    {% block metas %}{% endblock metas %}

    {% block stylesheets -%}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"/>
        {{ ui_fonts_stylesheets() }}
        {{ ui_forms_stylesheets() }}
    {%- endblock stylesheets %}

    {% include 'EkynaCoreBundle:Ui:ie-fix.html.twig' %}

    {{ require_js(not app.debug) }}
</head>
<body>
    {% block body %}

        {% include 'EkynaCmsBundle:Cms/Fragment:navbar.html.twig' %}

        {% block breadcrumb -%}
            <div class="container">
                {%- include 'EkynaCoreBundle:Ui:flashes.html.twig' -%}
                {{ cms_breadcrumb() }}
            </div>
        {%- endblock breadcrumb %}

        {% block content %}{% endblock content %}

        <div class="container" id="footer">
            {{ render_esi(controller('EkynaCmsBundle:Cms:footer', {'locale': app.request.locale})) }}
            <div>
                {{ ui_locale_switcher() }}
            </div>
        </div>

        {{ cms_cookie_consent() }}

    {% endblock body %}

    {% block javascripts -%}
        <script type="text/javascript">require(['bundles/ekynacms/js/main']);</script>
    {%- endblock javascripts %}
</body>
</html>
{% endspaceless %}
