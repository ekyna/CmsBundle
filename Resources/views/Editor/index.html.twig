{% spaceless %}
<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>CMS Editor</title>

    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800"
          rel="stylesheet" type="text/css"/>

    <link href="{{ asset('bundles/ekynacore/css/fontawesome.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('bundles/ekynacore/css/glyphicons.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('bundles/ekynacore/css/bootstrap.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/ekynacore/css/jquery-ui.css') }}" rel="stylesheet" type="text/css" />
    {{ admin_stylesheets() }}
    {{ ui_forms_stylesheets() }}
    <link href="{{ asset('bundles/ekynacms/css/editor.css') }}" type="text/css" rel="stylesheet">

    {% include 'EkynaCoreBundle:Ui:ie-fix.html.twig' %}

    {{ require_js(not app.debug) }}
</head>
<body class="cms-editor">

    <div data-controls-placeholder></div>
    <div data-viewport-placeholder></div>

    {% block javascripts -%}
        <script type="text/javascript">require(['ekyna-cms/editor']);</script>
    {%- endblock javascripts %}
</body>
</html>
{% endspaceless %}
