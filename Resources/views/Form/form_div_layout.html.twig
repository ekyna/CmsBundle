        </div>
    </div>
    {{- form_rest(form) -}}
{%- endblock ekyna_cms_animation_widget -%}


{%- block ekyna_cms_block_video_widget -%}
    {{- form_errors(form) -}}
    <div class="row">
        <div class="col-md-8">
            {{- form_row(form.translations, {'label_col': 0, 'widget_col': 12}) -}}
        </div>
        <div class="col-md-4">
            {{- form_row(form.data.video.autoplay) -}}
            {{- form_row(form.data.video.loop) -}}
            {{- form_row(form.data.video.muted) -}}
            {{- form_row(form.data.video.player) -}}
        </div>
    </div>
    {{- form_rest(form) -}}
{%- endblock ekyna_cms_block_video_widget -%}


{%- block ekyna_cms_block_video_translation_widget -%}
    {{- form_errors(form) -}}
    <div class="row">
        <div class="col-md-6">
            {{- form_row(form.data.poster, {'label_col': 6, 'widget_col': 6}) -}}
        </div>
        <div class="col-md-6">
            {{- form_row(form.data.video, {'label_col': 6, 'widget_col': 6}) -}}
        </div>
    </div>
    {{- form_rest(form) -}}
{%- endblock ekyna_cms_block_video_translation_widget -%}


{%- block ekyna_cms_container_background_widget -%}
    {{- form_errors(form) -}}
    {{- form_row(form.title, {'label_col': 3, 'widget_col': 9}) -}}
    <div class="row">
        {%- if form.data.theme is defined -%}
        <div class="col-md-6">
            {{- form_row(form.data.theme, {'label_col': 6, 'widget_col': 6}) -}}
        </div>
        {%- endif -%}
        <div class="col-md-6">
            {{- form_row(form.data.color, {'label_col': 6, 'widget_col': 6}) -}}
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            {{- form_row(form.data.image, {'label_col': 6, 'widget_col': 6}) -}}
        </div>
        <div class="col-md-6">
            {{- form_row(form.data.video, {'label_col': 6, 'widget_col': 6}) -}}
        </div>
    </div>
    {{- form_rest(form) -}}
{%- endblock ekyna_cms_container_background_widget -%}


{%- block ekyna_cms_slide_type_widget -%}
    {{- form_widget(form) -}}
    {%- if form.vars.slide_show is defined -%}
        {{- slide_show_render(form.vars.slide_show, {
            'id': 'slide-show-type',
            'auto': false,
            'ui': false,
            'javascript': false
        }) -}}
    {%- endif -%}
{%- endblock ekyna_cms_slide_type_widget -%}
