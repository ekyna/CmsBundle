<ul class="nav nav-tabs" data-tab-key="{{ resource_id }}">
    <li class="active">
        <a href="#tag-general" id="toggle-general" data-toggle="tab">
            {{ 'ekyna_core.field.general'|trans }}
        </a>
    </li>
</ul>
<div class="panel-body form-body">
    {{ bootstrap_set_style('horizontal') }}
    {{ bootstrap_set_col_size('md') }}
    <div class="tab-content">
        <div class="tab-pane active" id="tag-general">
            {{ form_errors(form) }}
            {{ form_row(form.name) }}
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.theme, {'label_col': 4, 'widget_col': 8}) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.icon, {'label_col': 4, 'widget_col': 8}) }}
                </div>
            </div>
        </div>
        {{ form_rest(form) }}
    </div>
</div>
