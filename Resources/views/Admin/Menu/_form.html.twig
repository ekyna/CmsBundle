<ul class="nav nav-tabs">
    <li class="active"><a href="#general" data-toggle="tab">{{ 'ekyna_core.field.general'|trans }}</a></li>
</ul>
<div class="panel-body form-body">
    {{ bootstrap_set_style('horizontal') }}
    {{ bootstrap_set_col_size('md') }}
    {{ form_errors(form) }}
    <div class="tab-content">
	    <div class="tab-pane active" id="general">
	        {{ form_row(form.name) }}
            {{ form_row(form.parent) }}
            <hr>
            {{ form_row(form.translations) }}
	        {{ form_row(form.description) }}
            {% if form.attributes is defined %}
                {{ form_row(form.attributes) }}
            {% endif %}
            <hr>
            {% if form.page is defined -%}
	        {{ form_row(form.page) }}
            {%- endif %}
	        {{ form_row(form.path) }}
            {% if form.route is defined %}
                {{ form_row(form.route) }}
                {{ form_row(form.parameters) }}
            {% endif %}
		</div>
    </div>
    {{ form_rest(form) }}
</div>