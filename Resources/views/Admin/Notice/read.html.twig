{% extends '@EkynaAdmin/Entity/Crud/read.html.twig' %}

{% block actions %}{% endblock %}


{% block main_tabs -%}
    <li class="active">
        <a href="#notice-general" id="toggle-general" data-toggle="tab">
            {{- 'field.general'|trans({}, 'EkynaUi') -}}
        </a>
    </li>
{%- endblock main_tabs %}


{% block main_contents -%}
    <div class="tab-pane active" id="notice-general">
        {{ show_row(notice.name, 'text', {
            'label': t('field.name', {}, 'EkynaUi')
        }) }}
        <div class="row">
            <div class="col-md-6">
                {{ show_row(notice.theme|cms_theme, 'text', {
                    'label': t('field.theme', {}, 'EkynaUi'),
                    'label_col': 4
                }) }}
            </div>
            <div class="col-md-6">
                {{ show_row(notice.icon|ui_fa_icon ~ ' (' ~ notice.icon ~ ')', 'text', {
                    'label': t('field.icon', {}, 'EkynaUi'),
                    'label_col': 4
                }) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                {{ show_row(notice.startAt, 'datetime', {
                    'label': t('field.start_date', {}, 'EkynaUi'),
                    'label_col': 4
                }) }}
            </div>
            <div class="col-md-6">
                {{ show_row(notice.endAt, 'datetime', {
                    'label': t('field.end_date', {}, 'EkynaUi'),
                    'label_col': 4
                }) }}
            </div>
        </div>
        {{ show_row(notice.translations, 'translations', {
            'fields': {
                'content': {
                    'label': t('field.content', {}, 'EkynaUi'),
                    'type': 'tinymce',
                    'options': {
                        'route': 'admin_ekyna_cms_notice_tinymce',
                        'route_params': {'noticeId': notice.id, 'field': 'content'},
                    }
                }
            }
        }) }}
    </div>
{%- endblock main_contents -%}
