{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
<h1>{{ 'ekyna.page.header.remove'|trans({'%name%': page.name})|raw }}</h1>
{% endblock %}

{% block actions %}
{{ ui_link(path('ekyna_cms_page_admin_list'), 'ekyna.admin.button.back_to_list', 'default', 'sm', 'list') }}
{#{ ui_link(path('ekyna_cms_page_admin_new'), 'ekyna.page.button.new', 'primary', 'sm', 'plus') }#}
{% endblock %}

{% block main %}
<form action="{{ path('ekyna_cms_page_admin_remove', {'pageId': page.id}) }}" method="post" class="form-horizontal">
    <div class="form-body">
	    {{ bootstrap_set_style('horizontal') }}
		{{ form_widget(form) }}
    </div>
    {{ ui_form_footer(path('ekyna_cms_page_admin_show', {'pageId': page.id}), 'ekyna.admin.button.remove', 'danger') }}
</form>
{% endblock %}

{% block side %}
{% endblock %}