{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
<h1>{{ 'ekyna_cms.page.header.show'|trans({'%name%': page.name})|raw }}</h1>
{% endblock %}

{% block actions %}
{{ admin_resource_btn(page, 'list') }}
{#{ admin_resource_btn(page, 'new') }#}
{% endblock %}

{% block main %}
<div class="actions">
	{{ admin_resource_btn(page, 'edit') }}
	{{ admin_resource_btn(page, 'remove') }}
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#general" data-toggle="tab">{{ 'ekyna_core.field.general'|trans }}</a></li>
        <li><a href="#seo" data-toggle="tab">{{ 'ekyna_core.field.seo'|trans }}</a></li>
    </ul>
    <div class="show-body">
        <div class="tab-content">
            <div class="tab-pane active" id="general">
                {{ show_row(page.name, 'text', 'ekyna_core.field.name') }}
                {{ show_row(page.title, 'text', 'ekyna_core.field.title') }}
                <div class="row">
                    <div class="col-md-6">
                        {{ show_row(page.menu, 'checkbox', 'ekyna_cms.field.main_menu', {'label_nb_col': 4}) }}
                    </div>
                    <div class="col-md-6">
                        {{ show_row(page.footer, 'checkbox', 'ekyna_cms.field.footer_menu', {'label_nb_col': 4}) }}
                    </div>
                </div>
                {% if not page.advanced %}
                {{ show_row(path('ekyna_cms_page_admin_tinymce', identifiers|merge({'pageId': page.id})), 'tinymce', 'ekyna_core.field.content') }}
                {% endif %}
            </div>
            <div class="tab-pane" id="seo">
                {{ show_row(page.seo, 'seo') }}
                {#{ show_row(page.seo.title, 'text', 'ekyna_core.field.title') }}
                {{ show_row(page.seo.description, 'text', 'ekyna_core.field.description') }}
                {{ show_row(page.path, 'url', 'ekyna_core.field.url') }}
                <div class="row">
                    <div class="col-md-6">
                        {{ show_row(page.seo.changefreq, 'text', 'ekyna_core.field.changefreq', {'label_nb_col': 4}) }}
                    </div>
                    <div class="col-md-6">
                        {{ show_row(page.seo.priority, 'text', 'ekyna_core.field.priority', {'label_nb_col': 4}) }}
                    </div>
                </div>
                #}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block side %}
{% endblock %}