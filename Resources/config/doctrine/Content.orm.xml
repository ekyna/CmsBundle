<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping 
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Ekyna\Bundle\CmsBundle\Entity\Content" table="cms_content">

	    <id name="id" type="integer" column="id">
	        <generator strategy="AUTO" />
	    </id>

        <field name="createdAt" type="datetime" column="created_at">
            <gedmo:timestampable on="create" />
        </field>
        <field name="updatedAt" type="datetime" column="updated_at" nullable="true">
            <gedmo:timestampable on="update" />
        </field>

        <one-to-many field="blocks" target-entity="Ekyna\Bundle\CmsBundle\Entity\AbstractBlock" mapped-by="content" fetch="EXTRA_LAZY">
            <cascade>
                <cascade-all />
            </cascade>
            <order-by>
                <order-by-field name="row" direction="ASC" />
                <order-by-field name="column" direction="ASC" />
            </order-by>
        </one-to-many>

    </entity>

</doctrine-mapping>