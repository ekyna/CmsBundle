<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping 
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity
            name="Ekyna\Bundle\CmsBundle\Entity\AbstractBlock"
            repository-class="Ekyna\Bundle\CmsBundle\Entity\BlockRepository"
            table="cms_block"
            inheritance-type="JOINED">

        <entity-listeners>
            <entity-listener class="Ekyna\Bundle\CmsBundle\Listener\AbstractBlockListener" />
        </entity-listeners>

        <discriminator-column name="type" type="string" />
	    <discriminator-map />

	    <id name="id" type="integer" column="id">
	        <generator strategy="AUTO" />
	    </id>

        <field name="name" type="string" column="name"  nullable="true" />
        <field name="row" type="smallint" column="row_num" />
        <field name="column" type="smallint" column="col_num" />
        <field name="size" type="smallint" column="size" />

        <many-to-one field="content" target-entity="Ekyna\Bundle\CmsBundle\Entity\Content" inversed-by="blocks">
            <join-column name="content_id" referenced-column-name="id" on-delete="CASCADE" nullable="true" />
        </many-to-one>

    </entity>

</doctrine-mapping>