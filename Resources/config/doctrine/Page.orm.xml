<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping 
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Ekyna\Bundle\CmsBundle\Entity\Page" repository-class="Ekyna\Bundle\CmsBundle\Entity\PageRepository" table="cms_page">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

	    <field name="left" column="lft" type="integer">
            <gedmo:tree-left />
        </field>
        <field name="right" column="rgt" type="integer">
            <gedmo:tree-right />
        </field>
        <field name="root" type="integer" nullable="true">
            <gedmo:tree-root />
        </field>
        <field name="level" column="lvl" type="integer">
            <gedmo:tree-level />
        </field>

        <many-to-one field="parent" target-entity="Ekyna\Bundle\CmsBundle\Entity\Page" inversed-by="children">
            <join-column name="parent_id" referenced-column-name="id" on-delete="CASCADE" />
            <gedmo:tree-parent/>
        </many-to-one>

        <one-to-many field="children" target-entity="Ekyna\Bundle\CmsBundle\Entity\Page" mapped-by="parent">
            <order-by>
                <order-by-field name="left" direction="ASC" />
            </order-by>
        </one-to-many>

        <gedmo:tree type="nested"/>

	    <field name="name" type="string" column="name" length="64" />
	    <field name="html" type="text" column="html" />
        <field name="menu" type="boolean" column="menu" />
        <field name="footer" type="boolean" column="footer" />

        <one-to-one field="seo" target-entity="Ekyna\Bundle\CmsBundle\Entity\Seo" inversed-by="page" fetch="EAGER">
            <cascade><cascade-all /></cascade>
            <join-column name="seo_id" referenced-column-name="id" />
        </one-to-one>

        <field name="route" type="string" column="route" length="64" />
        <field name="path" type="string" column="path" length="255" nullable="true" />
        <field name="static" type="boolean" column="static" />
        <field name="locked" type="boolean" column="locked" />
        <field name="controller" type="string" column="controller" length="64" nullable="true" />

        <field name="createdAt" type="datetime" column="created_at">
            <gedmo:timestampable on="create" />
        </field>
        <field name="updatedAt" type="datetime" column="updated_at">
            <gedmo:timestampable on="update" />
        </field>

        <indexes>
            <index name="idx_path" columns="path" />
            <index name="idx_name" columns="name" />
            <index name="idx_parent" columns="parent_id" />
        </indexes>

        <unique-constraints>
            <unique-constraint name="uniq_name" columns="name,parent_id" />
            <unique-constraint name="uniq_path" columns="path,parent_id" />
        </unique-constraints>

        <entity-listeners>
            <entity-listener class="Ekyna\Bundle\CmsBundle\Listener\PageListener" />
        </entity-listeners>
    </entity>

</doctrine-mapping>