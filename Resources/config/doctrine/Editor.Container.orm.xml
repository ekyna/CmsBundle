<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass
            name="Ekyna\Bundle\CmsBundle\Entity\Editor\Container"
            table="cms_container">

        <indexes>
            <index columns="name" name="index_cms_container_name"/>
        </indexes>

        <unique-constraints>
            <unique-constraint columns="name" name="unique_cms_container_name"/>
            <unique-constraint columns="title" name="unique_cms_container_title"/>
        </unique-constraints>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="name" type="string" column="name" length="32" nullable="true"/>
        <field name="title" type="string" column="title" length="128" nullable="true"/>

        <field name="position" type="integer" column="position">
            <gedmo:sortable-position/>
        </field>

        <field name="type" type="string" column="type" length="32"/>
        <field name="layout" type="object" column="layout"/>
        <field name="data" type="object" column="data"/>

        <field name="createdAt" type="datetime" column="created_at">
            <gedmo:timestampable on="create"/>
        </field>
        <field name="updatedAt" type="datetime" column="updated_at" nullable="true">
            <gedmo:timestampable on="update"/>
        </field>

        <one-to-many target-entity="Ekyna\Bundle\CmsBundle\Editor\Model\RowInterface"
                     field="rows" mapped-by="container" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
            <order-by>
                <order-by-field name="position" direction="ASC"/>
            </order-by>
        </one-to-many>

        <many-to-one target-entity="Ekyna\Bundle\CmsBundle\Editor\Model\ContentInterface"
                     field="content" inversed-by="containers">
            <join-column name="content_id" referenced-column-name="id" on-delete="CASCADE" nullable="true"/>
            <gedmo:sortable-group/>
        </many-to-one>

        <many-to-one target-entity="Ekyna\Bundle\CmsBundle\Editor\Model\ContainerInterface" field="copy">
            <join-column name="copy_id" referenced-column-name="id" on-delete="RESTRICT" nullable="true"/>
        </many-to-one>

    </mapped-superclass>

</doctrine-mapping>
