<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Ekyna\Bundle\CmsBundle\Entity\GalleryImage"
            table="cms_gallery_image">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="position" type="integer" column="position">
            <gedmo:sortable-position />
        </field>

        <many-to-one target-entity="Ekyna\Bundle\CmsBundle\Entity\Image" field="image">
            <cascade>
                <cascade-persist />
                <cascade-merge />
                <cascade-detach />
                <cascade-refresh />
            </cascade>
            <join-column name="image_id" referenced-column-name="id" nullable="false" on-delete="CASCADE" />
        </many-to-one>

        <many-to-one target-entity="Ekyna\Bundle\CmsBundle\Entity\Gallery" inversed-by="images" field="gallery" orphan-removal="true">
            <join-column name="gallery_id" referenced-column-name="id" nullable="true" on-delete="CASCADE" />
            <gedmo:sortable-group />
        </many-to-one>

    </entity>

</doctrine-mapping>
